<div class="row">
    <div class="col-lg-12">
        <center> <h1>Registration / Login Form </h1></center>
        <hr/>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form id="register">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" placeholder="name" name="name" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" placeholder="email" name="email" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="password" name="password" class="form-control"/>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-md-6 justify-content-center">
                        <button type="submit" class="register btn btn-primary form-control">Register</button>
                    </div>
                    <div class="col-md-6 justify-content-center">
                        <button type="reset" class="btn btn-warning form-control">Reset</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-6">
            <form method="POST" action="/admin/login">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" placeholder="email" name="email" class="form-control"/>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" placeholder="password" name="password" class="form-control"/>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-md-6 justify-content-center">
                        <button type="submit" class="btn btn-success form-control">Login</button>
                    </div>
                    <div class="col-md-6 justify-content-center">
                        <button type="reset" class="btn btn-danger form-control">Reset</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function(){
        $('.register').click(function(){
            var data = $('#register').serialize();
            $.ajax({
                url:'/admin/register',
                type: 'POST',
                data : data,
                success: function(data){
                    alert('User registration successful');
                    window.location.reload();
                },error : function(err){
                    alert(err);
                }
            });  
        });
    })
</script>