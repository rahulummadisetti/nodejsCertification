<div class="row">
    <div class="col-lg-12">
        <br/>
        <center><h1>Sports</h1></center>
        <hr/>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <% for(var i=0;i < data.sports.articles.length;i++) { %>
                     <% if(i==0) {%>
                        <li data-target="#carouselExampleIndicators" data-slide-to=<%=i%> class="active"></li>
                     <%} else { %>
                        <li data-target="#carouselExampleIndicators" data-slide-to=<%=i%>></li>
                        <% } %>
                <%}%>
            </ol>
            <div class="carousel-inner">

                <% for(var i=0;i < data.sports.articles.length;i++) { %>
                    <% if(i==0) {%>
                        <div class="carousel-item active">
                            <img src=<%=data.sports.articles[i].urlToImage %> class="d-block w-100" style="height:500px" alt=<%=data.sports.articles[i].title%> />
                        </div>
                    <%} else { %>
                        <div class="carousel-item">
                            <img src=<%=data.sports.articles[i].urlToImage %> class="d-block w-100" style="height:500px" alt=<%=data.sports.articles[i].title%>/>
                        </div>
                       <% } %>
               <%}%>

            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </button>
        </div>
    </div>
</div>
<hr/>
<div class="row">
<% for(var i=0;i < data.sports.articles.length;i++) {%>
    <div class="col-lg-3">
        <div class="card" style="padding: 5px; margin:5px">
            <br/>
            <a href=<%=data.sports.articles[i].url%>><img src=<%=data.sports.articles[i].urlToImage%> class="card-img-top"/></a>
            <div class="card-body">
                <div class="card-title">
                    <b><%=data.sports.articles[i].title%></b>
                </div>
                <div>
                    <%=data.sports.articles[i].description%>
                </div>
            </div>
            <div class="card-footer">
                <p><span> <b><%=data.sports.articles[i].author%></b></span> @
                <span> <%=data.sports.articles[i].publishedAt%></span> </p>
            </div>
        </div>
    </div>
<%}%>
</div>